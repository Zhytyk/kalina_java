<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="616.0" prefWidth="863.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.MainController">
    <children>
        <ToolBar fx:id="mainToolBar" prefHeight="41.0" prefWidth="863.0">
            <items>
                <SplitMenuButton fx:id="mainAddOn" mnemonicParsing="false" text="Довідка">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Таблиці прямої заміни" onAction="#onDirectChange"/>
                        <MenuItem mnemonicParsing="false" text="Таблиці оберненої взаємодії"  onAction="#onInDirectChange"/>
                    </items>
                </SplitMenuButton>
                <SplitMenuButton fx:id="visualization" mnemonicParsing="false" text="Візуализація">
                    <items>
                        <Menu fx:id="vDeploymentKey" mnemonicParsing="false" text="Розгортання ключа">
                            <items>
                                <MenuItem  fx:id="addKeySubTab" mnemonicParsing="false" text="Допоміжний ключ" disable="true" onAction="#showAddKeyVisual"/>
                                <MenuItem fx:id="evenKeySubTab" mnemonicParsing="false" text="Ключі з парними індексами" disable="true" onAction="#showEvenKeyVisual"/>
                                <MenuItem fx:id="oddKeySubTab" mnemonicParsing="false" text="Ключі з непарними индексами" disable="true" onAction="#showOddKeyVisual" />
                            </items>
                        </Menu>
                        <MenuItem fx:id="encryptSubTab" mnemonicParsing="false" text="Зашифрування" disable="true" onAction="#showEncryptVisual" />
                        <MenuItem fx:id="decryptSubTab" mnemonicParsing="false" text="Розшифрування" disable="true" onAction="#showDecryptVisual" />
                    </items>
                </SplitMenuButton>
            </items>
        </ToolBar>
        <TabPane fx:id="tabPane" layoutY="41.0" maxHeight="2000" maxWidth="2000" prefHeight="576.0" prefWidth="863.0"
                 tabClosingPolicy="UNAVAILABLE" tabMaxHeight="2000.0" tabMaxWidth="2000.0" AnchorPane.topAnchor="41.0">
            <tabs>
                <Tab text="Початкові дані">
                    <content>
                        <AnchorPane>
                            <children>
                                <VBox>
                                    <children>
                                        <HBox prefHeight="125.0">
                                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="125.0"
                                                        prefWidth="223.0">
                                                <children>
                                                    <fx:define>
                                                        <ToggleGroup fx:id="sizeBlockData"/>
                                                    </fx:define>
                                                    <RadioButton layoutX="16.0" layoutY="45.0" mnemonicParsing="false"
                                                                 text="128" toggleGroup="$sizeBlockData" selected="true" onAction="#changeBlockData"/>
                                                    <RadioButton layoutX="16.0" layoutY="67.0" mnemonicParsing="false"
                                                                 text="256" toggleGroup="$sizeBlockData" onAction="#changeBlockData"/>
                                                    <RadioButton layoutX="16.0" layoutY="89.0" mnemonicParsing="false"
                                                                 text="512" toggleGroup="$sizeBlockData" onAction="#changeBlockData"/>
                                                    <Label layoutX="14.0" layoutY="14.0"
                                                           text="Розмір блоку даних (f):"/>
                                                </children>
                                            </AnchorPane>
                                            <AnchorPane prefHeight="125.0" prefWidth="260.0">
                                                <children>
                                                    <fx:define>
                                                        <ToggleGroup fx:id="sizeKey"/>
                                                    </fx:define>
                                                    <RadioButton fx:id="key128" layoutX="16.0" layoutY="45.0" mnemonicParsing="false"
                                                                 text="128" toggleGroup="$sizeKey" selected="true"/>
                                                    <RadioButton fx:id="key256" layoutX="16.0" layoutY="67.0" mnemonicParsing="false"
                                                                 text="256" toggleGroup="$sizeKey"/>
                                                    <RadioButton fx:id="key512" layoutX="16.0" layoutY="89.0" mnemonicParsing="false"
                                                                 text="512" disable="true"  toggleGroup="$sizeKey"/>
                                                    <Label layoutX="14.0" layoutY="14.0" text="Довжина ключа (k):"/>
                                                </children>
                                            </AnchorPane>
                                            <AnchorPane prefHeight="125.0" prefWidth="234.0">
                                                <children>
                                                    <fx:define>
                                                        <ToggleGroup fx:id="formatData"/>
                                                    </fx:define>
                                                    <RadioButton layoutX="14.0" layoutY="69.0" mnemonicParsing="false"
                                                                 text="ASCII" toggleGroup="$formatData">
                                                    </RadioButton>
                                                    <RadioButton layoutX="14.0" layoutY="46.0" mnemonicParsing="false"
                                                                 text="HEX" toggleGroup="$formatData" selected="true"/>
                                                    <Label layoutX="12.0" layoutY="14.0" text="Формат даних:"/>
                                                </children>
                                            </AnchorPane>
                                        </HBox>
                                        <AnchorPane prefHeight="123.0">
                                            <children>
                                                <Label layoutX="14.0" layoutY="29.0" text="Введіть ключ:"/>
                                                <TextField fx:id="keyTField" layoutX="14.0" layoutY="46.0"
                                                           prefHeight="27.0" prefWidth="829.0"/>
                                                <Button fx:id="generateBtn" layoutX="14.0" layoutY="87.0"
                                                        mnemonicParsing="false" onAction="#generate"
                                                        text="Згенерувати"/>
                                                <Button fx:id="confirmBtn" layoutX="131.0" layoutY="87.0"
                                                        mnemonicParsing="false" onAction="#accept"
                                                        text="Підтвердити"/>
                                            </children>
                                        </AnchorPane>
                                        <AnchorPane prefHeight="281.0" prefWidth="863.0">
                                            <children>
                                                <TextField fx:id="acceptedTField" layoutX="14.0" layoutY="25.0"
                                                           prefHeight="27.0" prefWidth="830.0" />
                                                <TextArea fx:id="roundKeysTAField" layoutX="16.0" layoutY="106.0"
                                                          prefHeight="141.0" prefWidth="829.0"/>
                                                <Button fx:id="roundKeysBtn" layoutX="14.0" layoutY="70.0"
                                                        mnemonicParsing="false" text="Раундові ключі" onAction="#generateRoundKeys"/>
                                            </children>
                                        </AnchorPane>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Зашифрування">
                    <content>
                        <AnchorPane>
                            <children>
                                <Label layoutX="39.0" layoutY="21.0" text="Введіть дані, які бажаєте зашифрувати:"/>
                                <TextArea fx:id="inputEncryptTAField" layoutX="39.0" layoutY="48.0" prefHeight="154.0"
                                          prefWidth="729.0"/>
                                <Button fx:id="encryptBtn" layoutX="39.0" layoutY="215.0" mnemonicParsing="false"
                                        text="Зашифрувати" onAction="#doEncrypt"/>
                                <Label layoutX="39.0" layoutY="258.0" text="Зашифровані дані:"/>
                                <TextArea fx:id="outputEncryptTAField" layoutX="39.0" layoutY="282.0" prefHeight="160.0"
                                          prefWidth="729.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Розшифрування">
                    <content>
                        <AnchorPane>
                            <children>
                                <Label layoutX="39.0" layoutY="21.0" text="Введіть дані, які бажаєте розшифрувати:"/>
                                <TextArea fx:id="inputDecryptTAField" layoutX="39.0" layoutY="48.0" prefHeight="154.0"
                                          prefWidth="729.0"/>
                                <Button fx:id="decryptBtn" layoutX="39.0" layoutY="215.0" mnemonicParsing="false"
                                        text="Розшифрувати" onAction="#doDecrypt" />
                                <Label layoutX="39.0" layoutY="258.0" text="Розшифровані дані:"/>
                                <TextArea fx:id="outputDecryptTAField" layoutX="39.0" layoutY="282.0" prefHeight="160.0"
                                          prefWidth="729.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
